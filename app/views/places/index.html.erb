<% if @current_user %>
  <h1>Places</h1>

  <p>
    <a href="/places/new">New place</a>
  </p>

  <ul>
    <% for place in @places %>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
  </ul>

<% else %>
  Please <a href="/sessions/new">login</a> first
<% end %>

