<div class="ms-2">
  <h1><%= @place["name"] %></h1>

  <% if @current_user %>

      <p>
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
      </p>
    <div class="row">
      <% for post in @posts %>
        <div class="col-lg-4">
          <h3><%= post["title"] %></h3>
          <h6><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    </div>

  <% else %>
    Please <a href="/sessions/new">login</a> to see posts
  <% end %>
</div>