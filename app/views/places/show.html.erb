<div class="ms-2">
  <h1><%= @place["name"] %></h1>

  <% if @current_user %>

      <p>
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
      </p>
    <div class="row">
      <% for post in @posts %>
        <div class="col-md-4 col-sm-6">
          <h3><%= post["title"] %></h3>
          <h6><%= post["posted_on"] %></h4>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% end %>
          <p><%= post["description"] %></p>
        
        </div>
      <% end %>
    </div>

  <% else %>
    Please <a href="/login">login</a> to see posts
  <% end %>
</div>